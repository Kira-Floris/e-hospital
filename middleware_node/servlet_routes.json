{
    "main_route":"http://localhost:8080/servlet_tomcat",
    "routes":{
       "UserRegisterServlet":{
          "name":"UserRegisterServlet",
          "url":"/user/register",
          "methods":[
             "POST"
          ],
          "additional_routes":[
             "patient",
             "physician",
             "pharmacist"
          ]
       },
       "UserLoginServlet":{
          "name":"UserLoginServlet",
          "url":"/user/login",
          "methods":[
             "POST"
          ],
          "additional_routes":[
             "patient",
             "physician",
             "pharmacist"
          ]
       },
       "PatientConnectionServlet":{
          "name":"PatientConnectionServlet",
          "url":"/patient/connection",
          "methods":[
             "POST",
             "GET"
          ],
          "additional_routes":[
             "physician",
             "pharmacist"
          ]
       },
       "PatientConsultationServlet":{
          "name":"PatientConsultationServlet",
          "url":"/patient/consultation",
          "methods":[
             "GET"
          ]
       },
       "PatientDrugsServlet":{
          "name":"PatientDrugsSerlet",
          "url":"/patient/drugs",
          "methods":[
             "GET"
          ],
          "responseFormat": {
            "format":"csv",
            "columns": ["med_name","med_price","med_expiration"]
          }
       },
       "PhysicianConsultationServlet":{
          "name":"PhysicianConsultationServlet",
          "url":"/physician/consultation",
          "methods":[
             "POST",
             "GET"
          ]
       },
       "PharmacistDrugsServlet":{
          "name":"PharmacistDrugsSerlet",
          "url":"/pharmacist/drugs",
          "methods":[
             "POST",
             "GET"
          ]
       },
       "PharmacistProvisionServlet":{
          "name":"PharmacistProvisionSerlet",
          "url":"/pharmacist/provision",
          "methods":[
             "POST",
             "GET"
          ]
       }
    }
 }