<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>E-Hospital</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.UserRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/user/register/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/user/login/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PatientConnectionServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PatientConnectionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientConnectionServlet</servlet-name>
    <url-pattern>/patient/connection/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PatientConsultationServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PatientConsultationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientConsultationServlet</servlet-name>
    <url-pattern>/patient/consultation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PatientDrugsServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PatientDrugsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientDrugsServlet</servlet-name>
    <url-pattern>/patient/drugs</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PhysicianConsultationServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PhysicianConsultationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PhysicianConsultationServlet</servlet-name>
    <url-pattern>/physician/consultation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PharmacistDrugsServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PharmacistDrugsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PharmacistDrugsServlet</servlet-name>
    <url-pattern>/pharmacist/drugs</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PharmacistProvisionServlet</servlet-name>
    <servlet-class>com.servlet_tomcat.PharmacistProvisionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PharmacistProvisionServlet</servlet-name>
    <url-pattern>/pharmacist/provision</url-pattern>
  </servlet-mapping>
</web-app>
